<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<ProxyEndpoint name="default">
    <Description/>
    <FaultRules/>
    <PreFlow name="PreFlow">
        <Request/>
        <Response/>
    </PreFlow>
    <PostFlow name="PostFlow">
        <Request/>
        <Response/>
    </PostFlow>
   <Flows>
        <Flow name="GET clientes /">
            <Condition>(proxy.pathsuffix MatchesPath "/") and (request.verb = "GET")</Condition>
            <Description/>
            <Request/>
            <Response/>
        </Flow>
        
         <Flow name="POST clientes /">
            <Condition>(proxy.pathsuffix MatchesPath "/") and (request.verb = "POST")</Condition>
            <Description/>
            <Request/>
            <Response/>
        </Flow>

         <Flow name="PUT clientes /">
            <Condition>(proxy.pathsuffix MatchesPath "/") and (request.verb = "PUT")</Condition>
            <Description/>
            <Request/>
            <Response/>
        </Flow>

         <Flow name="DELETE clientes /">
            <Condition>(proxy.pathsuffix MatchesPath "/") and (request.verb = "DELETE")</Condition>
            <Description/>
            <Request/>
            <Response/>
        </Flow>


    </Flows>
    <HTTPProxyConnection>
        <BasePath>/clientes/v1</BasePath>
        <Properties/>
        <VirtualHost>default</VirtualHost>
        <VirtualHost>secure</VirtualHost>
    </HTTPProxyConnection>
    <RouteRule name="routeMock">
        <Condition>(environment.name = "test")</Condition>
        <TargetEndpoint>mock</TargetEndpoint>
    </RouteRule>
    <RouteRule name="default">
        <TargetEndpoint>default</TargetEndpoint>
    </RouteRule>
</ProxyEndpoint>